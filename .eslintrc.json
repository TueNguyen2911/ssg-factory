{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["./tests"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "require-atomic-updates": "error",
    "max-len": ["warn", { "code": 200 }],
    "curly": "error"
  }
}
